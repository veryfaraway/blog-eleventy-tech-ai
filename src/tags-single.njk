---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | lower }}/
layout: base.njk
---

{% set currentLang = page.lang or "ko" %}
{% set allTaggedPosts = collections.blog | filterByTag(tag) %}
{% set taggedPosts = allTaggedPosts | filterByLang(currentLang) %}
{% if taggedPosts.length == 0 %}
    {# no posts for this language — show empty list (user requested language-only) #}
{% endif %}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- 메인 컨텐츠 -->
        <div class="lg:col-span-8">
            <div class="mb-8">
                <a href="/blog/" class="inline-flex items-center text-sm text-primary-600 hover:text-primary-700 mb-4">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    {{ i18n[currentLang].nav.blog | default("블로그로 돌아가기") }}
                </a>
                <h1 class="text-4xl font-bold text-dark-900 mb-2">
                    <span class="text-primary-600">#{{ tag }}</span>
                </h1>
                <p class="text-dark-700" data-post-count>{{ allTaggedPosts.length }}개의 포스트</p>
            </div>

            <!-- 카드 그리드 -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6" id="posts-container">
                {% for post in allTaggedPosts %}
                <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow group post-item" data-lang="{{ post.data.lang | default('ko') }}">
                    <!-- Thumbnail -->
                    <a href="{{ post.url }}" class="block aspect-video bg-gradient-to-br from-primary-100 to-accent-100 relative overflow-hidden">
                        {% if post.data.thumbnail %}
                        <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        {% endif %}
                        {% if post.data.category %}
                        <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold bg-white/90 text-primary-700 rounded-full">
                            {{ post.data.category }}
                        </span>
                        {% endif %}
                    </a>
                    
                    <!-- Content -->
                    <div class="p-5">
                        <h2 class="text-lg font-bold text-dark-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </h2>
                        
                        {% if post.data.description %}
                        <p class="text-sm text-dark-700 mb-3 line-clamp-2">{{ post.data.description }}</p>
                        {% endif %}
                        
                        <!-- Tags -->
                        {% if post.data.tags %}
                        <div class="flex flex-wrap gap-1">
                            {% for postTag in post.data.tags | slice(0, 3) %}
                                {% if postTag !== "blog" and postTag !== "post" %}
                                <span class="inline-block px-2 py-0.5 text-xs font-medium {% if postTag === tag %}bg-primary-100 text-primary-700{% else %}bg-gray-100 text-dark-700{% endif %} rounded">
                                    #{{ postTag }}
                                </span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </article>
                {% endfor %}
            </div>

        </div>
        
        <!-- 사이드바 -->
        <div class="lg:col-span-4">
            {% include "sidebar.njk" %}
        </div>
    </div>
</div>
