---
layout: base.njk
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- 메인 컨텐츠 -->
        <div class="lg:col-span-8">
            <article class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 lg:p-12">
                <header class="mb-8 pb-8 border-b border-gray-200">
                    <h1 class="text-4xl font-bold text-dark-900 mb-4">{{ title }}</h1>
                    {% if description %}
                    <p class="text-lg text-dark-700">{{ description }}</p>
                    {% endif %}
                </header>
                
                <div class="prose prose-lg max-w-none">
                    {{ content | safe }}
                </div>
            </article>
        </div>
        
        <!-- 사이드바 -->
        <div class="lg:col-span-4">
            {% include "sidebar.njk" %}
        </div>
    </div>
</div>
