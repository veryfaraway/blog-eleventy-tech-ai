---
layout: base.njk
title: Categories
permalink: /categories/
---

{% set currentLang = page.lang or "ko" %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-dark-900 mb-2">{{ i18n[currentLang].categories.title | default("Categories") }}</h1>
        <p class="text-dark-700">{{ i18n[currentLang].categories.subtitle | default("주제별로 분류된 글들을 찾아보세요") }}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for category in categoryList %}
        {% set categoryPosts = collections[category.name] %}
        <a href="/categories/{{ category.slug }}/" 
           class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md hover:border-primary-300 transition-all group">
            <div class="flex items-center justify-between mb-3">
                <h2 class="text-2xl font-bold text-dark-900 group-hover:text-primary-600 transition-colors">
                    {{ category.name }}
                </h2>
                <svg class="w-6 h-6 text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </div>
            <p class="text-sm text-dark-700">
                {% if categoryPosts %}
                {{ categoryPosts.length }} {{ i18n[currentLang].categories.posts | default("개의 포스트") }}
                {% else %}
                {{ i18n[currentLang].categories.noPosts | default("포스트 없음") }}
                {% endif %}
            </p>
        </a>
        {% endfor %}
    </div>
</div>

