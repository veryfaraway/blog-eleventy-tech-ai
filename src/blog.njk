---
layout: base.njk
title: Blog
pagination:
    data: collections.blog
    size: 24
    alias: posts
permalink: /blog/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}
---


{% set currentLang = page.lang or "ko" %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- 메인 컨텐츠 -->
        <div class="lg:col-span-8">
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-dark-900 mb-2">{{ i18n[currentLang].blog.title | default(i18n.ko.blog.title) }}</h1>
                <p class="text-dark-700">{{ i18n[currentLang].blog.subtitle | default(i18n.ko.blog.subtitle) }}</p>
            </div>

            <!-- 카드 그리드 -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-12" id="posts-container">
                {% for post in posts %}
                <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow group post-item" data-lang="{{ post.data.lang | default('ko') }}">
                    <!-- Thumbnail -->
                    <a href="{{ post.url }}" class="block aspect-video bg-gradient-to-br from-primary-100 to-accent-100 relative overflow-hidden">
                        {% if post.data.thumbnail %}
                        <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        {% endif %}
                        {% if post.data.category %}
                        <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold bg-white/90 text-primary-700 rounded-full">
                            {{ post.data.category }}
                        </span>
                        {% endif %}
                    </a>
                    
                    <!-- Content -->
                    <div class="p-5">
                        <h2 class="text-lg font-bold text-dark-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </h2>
                        
                        {% if post.data.description %}
                        <p class="text-sm text-dark-700 mb-3 line-clamp-2">{{ post.data.description }}</p>
                        {% endif %}
                        
                        <!-- Tags -->
                        {% if post.data.tags %}
                        <div class="flex flex-wrap gap-1">
                            {% for tag in post.data.tags | slice(0, 3) %}
                                {% if tag !== "blog" and tag !== "post" %}
                                <span class="inline-block px-2 py-0.5 text-xs font-medium bg-gray-100 text-dark-700 rounded">
                                    #{{ tag }}
                                </span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </article>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% if pagination.href.previous or pagination.href.next %}
            <nav class="flex items-center justify-center gap-4">
                {% if pagination.href.previous %}
                <a href="{{ pagination.href.previous }}" 
                   class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-primary-50 hover:border-primary-300 transition-colors">
                    {{ i18n[currentLang].blog.prevPage | default(i18n.ko.blog.prevPage) }}
                </a>
                {% endif %}
                
                <span class="text-sm text-dark-700">
                    Page {{ pagination.pageNumber + 1 }} of {{ pagination.hrefs | length }}
                </span>
                
                {% if pagination.href.next %}
                <a href="{{ pagination.href.next }}" 
                   class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-primary-50 hover:border-primary-300 transition-colors">
                    {{ i18n[currentLang].blog.nextPage | default(i18n.ko.blog.nextPage) }}
                </a>
                {% endif %}
            </nav>
            {% endif %}
        </div>
        
        <!-- 사이드바 -->
        <div class="lg:col-span-4">
            {% include "sidebar.njk" %}
        </div>
    </div>
</div>
