---
layout: base.njk
title: Home
permalink: /
lang: ko
---

{% set currentLang = page.lang or "ko" %}
{% set langPosts = collections.blog | filterByLang(currentLang) %}
{% if langPosts.length == 0 %}
  {% set langPosts = collections.blog %}
{% endif %}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-5xl md:text-6xl font-bold text-dark-900 mb-6">
                {{ i18n[currentLang].home.title | default(i18n.ko.home.title) }}
            </h1>
            <p class="text-xl text-dark-700 mb-8">
                {{ i18n[currentLang].home.subtitle | default(i18n.ko.home.subtitle) }}
            </p>
            <div class="flex gap-4 justify-center">
                <a href="/blog/" class="px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                    {{ i18n[currentLang].home.viewBlog | default(i18n.ko.home.viewBlog) }}
                </a>
                <a href="/about/" class="px-6 py-3 bg-white border-2 border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors">
                    {{ i18n[currentLang].home.about | default(i18n.ko.home.about) }}
                </a>
            </div>
        </div>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- 메인 컨텐츠 -->
        <div class="lg:col-span-8">
            <!-- Recent Posts -->
            <section class="mb-12">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-3xl font-bold text-dark-900">{{ i18n[currentLang].home.recentPosts | default(i18n.ko.home.recentPosts) }}</h2>
                    <a href="/blog/" class="text-primary-600 hover:text-primary-700 font-medium">
                        {{ i18n[currentLang].home.viewAll | default(i18n.ko.home.viewAll) }}
                    </a>
                </div>
                
                {% set koPosts = collections.blog_ko | limit(6) %}
                {% set enPosts = collections.blog_en | limit(6) %}
                
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6" id="posts-container">
                    {# Korean Posts #}
                    {% for post in koPosts %}
                    <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow group post-item" data-lang="ko">
                        <!-- Thumbnail -->
                        <a href="{{ post.url }}" class="block aspect-video bg-gradient-to-br from-primary-100 to-accent-100 relative overflow-hidden">
                            {% if post.data.thumbnail %}
                            <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                            {% else %}
                            <div class="w-full h-full flex items-center justify-center">
                                <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </div>
                            {% endif %}
                            {% if post.data.category %}
                            <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold bg-white/90 text-primary-700 rounded-full">
                                {{ post.data.category }}
                            </span>
                            {% endif %}
                        </a>
                        
                        <!-- Content -->
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-dark-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                            </h3>
                            
                            {% if post.data.description %}
                            <p class="text-sm text-dark-700 mb-3 line-clamp-2">{{ post.data.description }}</p>
                            {% endif %}
                            
                            <!-- Tags -->
                            {% if post.data.tags %}
                            <div class="flex flex-wrap gap-1">
                                {% for tag in post.data.tags | slice(0, 3) %}
                                    {% if tag !== "blog" and tag !== "post" %}
                                    <span class="inline-block px-2 py-0.5 text-xs font-medium bg-gray-100 text-dark-700 rounded">
                                        #{{ tag }}
                                    </span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </article>
                    {% endfor %}

                    {# English Posts #}
                    {% for post in enPosts %}
                    <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow group post-item" data-lang="en">
                        <!-- Thumbnail -->
                        <a href="{{ post.url }}" class="block aspect-video bg-gradient-to-br from-primary-100 to-accent-100 relative overflow-hidden">
                            {% if post.data.thumbnail %}
                            <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                            {% else %}
                            <div class="w-full h-full flex items-center justify-center">
                                <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </div>
                            {% endif %}
                            {% if post.data.category %}
                            <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold bg-white/90 text-primary-700 rounded-full">
                                {{ post.data.category }}
                            </span>
                            {% endif %}
                        </a>
                        
                        <!-- Content -->
                        <div class="p-5">
                            <h3 class="text-lg font-bold text-dark-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                                <a href="{{ post.url }}">{{ post.data.title }}</a>
                            </h3>
                            
                            {% if post.data.description %}
                            <p class="text-sm text-dark-700 mb-3 line-clamp-2">{{ post.data.description }}</p>
                            {% endif %}
                            
                            <!-- Tags -->
                            {% if post.data.tags %}
                            <div class="flex flex-wrap gap-1">
                                {% for tag in post.data.tags | slice(0, 3) %}
                                    {% if tag !== "blog" and tag !== "post" %}
                                    <span class="inline-block px-2 py-0.5 text-xs font-medium bg-gray-100 text-dark-700 rounded">
                                        #{{ tag }}
                                    </span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </article>
                    {% endfor %}
                </div>

            </section>
        </div>
        
        <!-- 사이드바 -->
        <div class="lg:col-span-4">
            {% include "sidebar.njk" %}
        </div>
    </div>
</div>
